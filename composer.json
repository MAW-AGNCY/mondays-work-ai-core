{
  "name": "mondayswork/ai-core",
  "description": "Core AI system for WooCommerce - Modular artificial intelligence integration for WordPress and WooCommerce",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "woocommerce",
    "ai",
    "artificial-intelligence",
    "openai",
    "plugin"
  ],
    "license": "Proprietary",  "authors": [
    {
      "name": "Monday's Work",
      "email": "info@mondayswork.com",
      "homepage": "https://mondayswork.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "MondaysWork\\AI\\Core\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MondaysWork\\AI\\Core\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress includes/",
    "phpcbf": "phpcbf --standard=WordPress includes/",
    "post-install-cmd": [
      "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
